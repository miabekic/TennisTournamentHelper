<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/tv_registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register"
            app:layout_constraintTop_toBottomOf="@id/guideline_top_registration"
            app:layout_constraintStart_toEndOf="@id/guideline_left_registration"
            app:layout_constraintEnd_toStartOf="@id/guideline_right_registration"
            android:textSize="30sp"
            android:textColor="@color/black" />

    <EditText
            android:id="@+id/et_email_registration"
            android:layout_marginTop="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/guideline_left_registration"
            app:layout_constraintTop_toBottomOf="@id/tv_registration"
            app:layout_constraintEnd_toStartOf="@id/guideline_right_registration"
            android:hint="@string/hintEmail" />

    <EditText
            android:id="@+id/et_password_registration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/et_email_registration"
            app:layout_constraintStart_toEndOf="@id/guideline_left_registration"
            app:layout_constraintEnd_toStartOf="@id/guideline_right_registration"
            android:hint="@string/hintPassword"
            android:inputType="textPassword" />

    <EditText
            android:id="@+id/et_confirm_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/et_password_registration"
            app:layout_constraintStart_toEndOf="@id/guideline_left_registration"
            app:layout_constraintEnd_toStartOf="@id/guideline_right_registration"
            android:hint="@string/hintConfirmPassword"
            android:inputType="textPassword" />

    <TextView
            android:id="@+id/tv_alert_registration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/et_confirm_password"
            app:layout_constraintStart_toEndOf="@id/guideline_left_registration"
            app:layout_constraintEnd_toStartOf="@id/guideline_right_registration" />

    <Button
            android:id="@+id/b_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/btnRegistration"
            app:layout_constraintTop_toBottomOf="@id/tv_alert_registration"
            app:layout_constraintStart_toEndOf="@id/guideline_left_registration"
            app:layout_constraintEnd_toStartOf="@id/guideline_right_registration"
            android:layout_marginTop="5dp" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_left_registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.04" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_top_registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_right_registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.96" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_bottom_registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.80" />


</androidx.constraintlayout.widget.ConstraintLayout>